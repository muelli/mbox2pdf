%\usepackage{literat}                                                                      
%\usepackage{aurical}                                                                      
%\renewcommand*\ttdefault{txtt} \renewcommand*\familydefault{\ttdefault}                   
%\usepackage{mathptmx}                                                                     
%\renewcommand*\sfdefault{ugq}                                                             
%\usepackage[urw-garamond]{mathdesign}                                                     
%\usepackage{times}                                                                        
%\usepackage{tgadventor}                                                                   
%\usepackage{tgbonum}                                                                      
%\usepackage{tgchorus}                                                                     
