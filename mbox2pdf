%\usepackage{tgheros}                                                                      
%\usepackage{tgpagella}                                                                    
%\usepackage{tgtermes}                                                                     
%\usepackage{tgschola}                                                                      
%\usepackage{fourier}                                                                      
%\usepackage{gfsbodoni}                                                                    
%\usepackage{gfsdidot}                                                                     
%\usepackage{kpfonts}                                                                      
%\usepackage{uncial}                                                                       
%\usepackage{libertine}                                                                    
%\usepackage{chancery}                                                                     
